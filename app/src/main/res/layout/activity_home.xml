<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!--HEADER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shield_keyhole"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/space_mono_bold"
                android:textColor="@color/green"
                android:id="@+id/txtAppName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gradient_background_to_light">

        </LinearLayout>

        <!--BODY container-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <!--BODY-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shadow_border"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="What is Encryption?"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:fontFamily="monospace"
                                android:textColor="@color/green"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/encryption_desc"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/space_mono_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Encryption"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/space_mono_regular"
                                    android:textColor="@color/green"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/btnStartEncrypting">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="START ENCRYPTING"
                                        android:textStyle="bold"
                                        android:textSize="15dp"
                                        android:fontFamily="monospace"
                                        android:textColor="@color/black"/>

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/arrow"
                                        android:layout_gravity="end" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/green"
                                    android:id="@+id/btnStartEncryptingUnderline">

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="30dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Common Types of Encryption"
                            android:textSize="18dp"
                            android:fontFamily="@font/space_mono_bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical"
                            android:background="@drawable/shadow_border"
                            android:paddingVertical="10dp"
                            android:id="@+id/encryption1"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="AES (Advanced Encryption Standard)"
                                android:textSize="16dp"
                                android:fontFamily="@font/space_mono_bold"
                                android:textColor="@color/black"
                                android:id="@+id/txtEncName1"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/aes_decription"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/space_mono_regular"
                                android:textStyle="bold"
                                android:textColor="@color/gray"
                                android:ellipsize="end"
                                android:maxHeight="80dp"
                                android:maxLines="3"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical"
                            android:background="@drawable/shadow_border"
                            android:paddingVertical="10dp"
                            android:layout_marginVertical="10dp"
                            android:id="@+id/encryption2"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="AES (Advanced Encryption Standard)"
                                android:textSize="16dp"
                                android:fontFamily="@font/space_mono_bold"
                                android:textColor="@color/black"
                                android:id="@+id/txtEncName2"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/aes_decription"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/space_mono_regular"
                                android:textStyle="bold"
                                android:textColor="@color/gray"
                                android:ellipsize="end"
                                android:maxHeight="80dp"
                                android:maxLines="3"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/btnSeeMore">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="See More"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:fontFamily="monospace"
                                    android:textColor="@color/green"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/green">

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="@color/black">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/home"
                app:tint="@color/green"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/lock"
                app:tint="@color/white"
                android:id="@+id/navEncrypt"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/key"
                app:tint="@color/white"
                android:id="@+id/navDecrypt"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/shield_cross"
                app:tint="@color/white"
                android:id="@+id/navEncryptionList"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/info"
                app:tint="@color/white"
                android:id="@+id/navInfo"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>